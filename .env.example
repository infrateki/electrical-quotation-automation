# ===================================================================
# ELECTRICAL QUOTATION AUTOMATION SYSTEM - ENVIRONMENT VARIABLES
# ===================================================================
# Copy this file to .env and update with your actual values

# Application Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=info
APP_NAME="Electrical Quotation Automation"
APP_VERSION=0.1.0

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production-minimum-32-chars
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# AI/LLM API Keys
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_ORG_ID=org-optional-organization-id
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here-optional

# Database Connections
DATABASE_URL=postgresql+asyncpg://quotation_user:quotation_pass@localhost:5432/quotation_db
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4j_password
NEO4J_DATABASE=quotation
REDIS_URL=redis://localhost:6379/0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# External API Keys (Optional - for pricing integrations)
ASCO_API_KEY=
SCHNEIDER_API_KEY=
SQUARE_D_API_KEY=
ABB_API_KEY=
EATON_API_KEY=
NEC_API_KEY=

# Vector Database (Optional)
PINECONE_API_KEY=
PINECONE_ENVIRONMENT=
PINECONE_INDEX_NAME=quotation-components

# AWS Configuration (Optional - for S3 storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# Monitoring (Optional)
SENTRY_DSN=
PROMETHEUS_PORT=8001

# File Storage
UPLOAD_DIRECTORY=./uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes

# Agent Configuration
AGENT_TIMEOUT_SECONDS=300
AGENT_MAX_RETRIES=3
AGENT_PARALLEL_LIMIT=5
AGENT_CACHE_ENABLED=true
AGENT_CACHE_TTL=3600

# LLM Model Selection
DEFAULT_LLM_MODEL=gpt-4o
SIMPLE_AGENT_MODEL=gpt-3.5-turbo
ADVANCED_AGENT_MODEL=gpt-4o

# Feature Flags
ENABLE_WEBSOCKET=true
ENABLE_RATE_LIMITING=true
ENABLE_METRICS=true
ENABLE_TRACING=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
MAX_REQUEST_SIZE=10485760  # 10MB

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
EMAIL_FROM=noreply@quotation-automation.com
